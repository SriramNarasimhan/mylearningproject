<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Chat Now"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text &amp; Image - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <ChatNow
                jcr:primaryType="nt:unstructured"
                jcr:title="Chat Now"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <fieldset
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                <layout
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <enablechatCheckbox
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                fieldDescription="Enable/Disable Lo for LiveEngage"
                                                name="./enablechatCheckbox"
                                                text="Lo Persistence For Chat (LE)"
                                                value="true"/>
                                            <enablechatCheckboxType
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                name="./enablechatCheckbox@TypeHint"
                                                value="Boolean"/>
                                            <liveengage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                class="cq-dialog-dropdown-showhide"
                                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                                fieldDescription="Select LiveEngage account"
                                                fieldLabel="Select LiveEngage account"
                                                name="./liveengagecontactus">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="/apps/dotcom/components/contactus_datasource"
                                                    text="text"
                                                    value="value"/>
                                            </liveengage>
											<icon
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
												allowBlank="{Boolean}true"
												fieldDescription="Sets an icon for the component"
												fieldLabel="Icon"
												name="./icon"
												rootPath="/content/dam"/>
											<alttext
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/textfield"
												fieldDescription="Alt text for image"
												fieldLabel="Alt Text"
												maxlength="{Long}100"
												name="./iconalttext"/>
											<linkText
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/textfield"
												fieldDescription="Sets link text"
												fieldLabel="link Text"
												name="./linkText"/>
											<url
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
												allowBlank="{Boolean}false"
												fieldDescription="Sets the url target for the social media link"
												fieldLabel="Url"
												name="./linkURL"
												rootPath="/content"/>
											<urlParams
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/textfield"
												fieldDescription="Url Params provided should be concatenated onto the url e.g. /path/to/url?param1=value1&amp;param2=value2"
												fieldLabel="Url Params"
												name="./urlParams"/>
											<anchorTag
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/textfield"
												fieldDescription="Sets anchor tag"
												fieldLabel="Anchor Tag"
												name="./anchorTag"/>	
											<target
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/select"
												class="cq-dialog-dropdown-showhide"
												cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
												fieldDescription="Sets the window target for the link."
												fieldLabel="Target"
												name="./target">
												<items jcr:primaryType="nt:unstructured">
													<self
														jcr:primaryType="nt:unstructured"
														text="Default"
														value="_self"/>
													<blank
														jcr:primaryType="nt:unstructured"
														text="Blank"
														value="_blank"/>
												</items>
											</target>
											<titleTag
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/textfield"
												fieldDescription="Sets title tag"
												fieldLabel="Title Tag"
												name="./titleTag"/>
											<loDataPersistcontactusCheckbox
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/checkbox"
												fieldDescription="Pull Loan officer data from cookies if exist"
												name="./loDataPersistcontactusCheckbox"
												text="Enable Loan Officer Persistence?"
												value="true"/>
											<loDataPersistcontactusCheckboxType
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/hidden"
												name="./loDataPersistcontactusCheckbox@TypeHint"
												value="Boolean"/>
                                        </items>
                                    </column>
                                </items>
                            </fieldset>
                        </items>
                    </column>
                </items>
            </ChatNow>
        </items>
    </content>
</jcr:root>
