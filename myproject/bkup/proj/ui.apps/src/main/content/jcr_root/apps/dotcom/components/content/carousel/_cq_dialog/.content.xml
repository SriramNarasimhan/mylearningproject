<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Carousel"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <general
                jcr:primaryType="nt:unstructured"
                jcr:title="general"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"
                    type="nav"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <mode
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                fieldDescription="Type of transition between slides"
                                fieldLabel="Mode *"
                                name="./mode"
                                required="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <horizontal
                                        jcr:primaryType="nt:unstructured"
                                        text="Horizontal"
                                        value="horizontal"/>
                                    <vertical
                                        jcr:primaryType="nt:unstructured"
                                        text="Vertical"
                                        value="vertical"/>
                                    <fade
                                        jcr:primaryType="nt:unstructured"
                                        text="Fade"
                                        value="fade"/>
                                </items>
                            </mode>
                            <speed
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/foundation/form/numberfield"
                                defaultValue="{Long}500"
                                fieldDescription="Slide transition during (in ms)"
                                fieldLabel="Speed *"
                                min="{Long}500"
                                name="./speed"
                                required="{Boolean}true"
                                step="{Long}50"/>
                            <startslide
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/foundation/form/numberfield"
                                fieldDescription="Starting slide index (zero-based)"
                                fieldLabel="Start Slide *"
                                min="{Long}0"
                                name="./startslide"
                                required="{Boolean}true"
                                step="{Long}1"/>
                            <randomstart/>
                            <controls/>
                        </items>
                    </column>
                </items>
            </general>
            <autotab
                jcr:primaryType="nt:unstructured"
                jcr:title="autotab"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"
                    type="nav"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <auto
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/foundation/form/checkbox"
                                defaultChecked="{Boolean}false"
                                fieldDescription="Slides automatically transition"
                                name="./auto"
                                text="Auto"
                                uncheckedValue="{Boolean}false"
                                value="true"/>
                            <autodelay
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/foundation/form/numberfield"
                                defaultValue="{Long}0"
                                fieldDescription="Time (in ms) auto show should wait before starting"
                                fieldLabel="Auto Delay"
                                name="./autodelay"
                                step="{Long}50"/>
                            <pause/>
                            <autohover/>
                        </items>
                    </column>
                </items>
            </autotab>
        </items>
    </content>
</jcr:root>
