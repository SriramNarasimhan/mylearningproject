<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Section Feature"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <style
                jcr:primaryType="nt:unstructured"
                jcr:title="Style"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container"
                        class="sectionfeature_class">
                        <items jcr:primaryType="nt:unstructured">
                            <fieldset
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                <layout
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <styles
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                class="cq-dialog-dropdown-showhide"
                                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                                defaultValue="blue"
                                                fieldDescription="Sets the style for the feature content component."
                                                fieldLabel="Styles"
                                                name="./styles"
                                                value="blue">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <icontophorizontal
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Image Top Horizontal"
                                                        value="Image Top Horizontal"/>
                                                    <iconlefthorizontal
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Image Left Horizontal"
                                                        value="Image Left Horizontal"/>
                                                    <iconleftvertical
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Image Left Vertical"
                                                        value="Image Left Vertical"/>
                                                </items>
                                            </styles>
                                            <desktoponly
				                                jcr:primaryType="nt:unstructured"
				                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
				                                defaultChecked="{Boolean}false"
				                                fieldDescription="Checking the box will disable section feature when viewport is 740 or less for Image Top Horizontal style"
				                                fieldLabel="Hide when view port is 740 or less"
				                                name="./desktoponly"
				                                text="Hide when view port is 740 or less"
				                                uncheckedValue="false"
				                                value="true"/>
                                        </items>
                                    </column>
                                </items>
                            </fieldset>
                        </items>
                    </column>
                </items>
            </style>
            <content
                jcr:primaryType="nt:unstructured"
                jcr:title="Content"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container"
                        class="sectionfeature_class">
                        <items jcr:primaryType="nt:unstructured">
                            <fieldset
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                <layout
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <pages
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                                class="full-width"
                                                eaem-nested=""
                                                fieldDescription="Click 'Add Field' to add a new item"
                                                fieldLabel="Section Feature Multifield">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                                    name="./iItems">
                                                    <layout
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                        method="absolute"/>
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <heading
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                    fieldDescription="Enter Section Feature heading"
                                                                    fieldLabel="Heading"
                                                                    name="./heading"
                                                                    required="{Boolean}false"/>
                                                                <image
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                                    fieldDescription="Select Icon Image"
                                                                    fieldLabel="Icon"
                                                                    name="./image"
                                                                    required="{Boolean}true"
                                                                    rootPath="/content/dam"/>
                                                                <alt
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                    fieldDescription="Enter Alt Text"
                                                                    fieldLabel="Alt Text"
                                                                    name="./alt"
                                                                    required="{Boolean}false"/>
                                                                <text
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                                    fieldLabel="Description"
                                                                    name="./text"
                                                                    required="{Boolean}false"
                                                                    useFixedInlineToolbar="{Boolean}true">
                                                                   <rtePlugins
										                                jcr:primaryType="nt:unstructured"
										                                sling:resourceSuperType="/apps/dotcom/components/content/globalrte/cq:dialog/content/items/column/items/text/rtePlugins"/>
										                            <uiSettings
										                                jcr:primaryType="nt:unstructured"
										                                sling:resourceSuperType="/apps/dotcom/components/content/globalrte/cq:dialog/content/items/column/items/text/uiSettings"/>
										                            <htmlRules
										                                jcr:primaryType="nt:unstructured"
										                                sling:resourceSuperType="/apps/dotcom/components/content/globalrte/cq:dialog/content/items/column/items/text/htmlRules"/>
                                                                </text>
                                                                <url
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                                    allowBlank="{Boolean}false"
                                                                    fieldDescription="Set the navigation url"
                                                                    fieldLabel="Url"
                                                                    name="./linkURL"
                                                                    required="{Boolean}false"
                                                                    rootPath="/content"/>
                                                                <urlParams
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                    fieldDescription="Url Params provided should be concatenated onto the url e.g. /path/to/url?param1=value1&amp;param2=value2"
                                                                    fieldLabel="Url Params"
                                                                    name="./urlParams"
                                                                    required="{Boolean}false"/>
                                                                <target
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                                    class="cq-dialog-dropdown-showhide"
                                                                    cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                                                    fieldDescription="Sets the window target for the navigation"
                                                                    fieldLabel="Target"
                                                                    name="./target"
                                                                    required="{Boolean}false">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <self
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Default"
                                                                            value="_self"/>
                                                                        <blank
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Blank"
                                                                            value="_blank"/>
                                                                    </items>
                                                                </target>
                                                                <anchorTag
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                    fieldDescription="Sets an anchor tag that’s applied to the url e.g. /path/to/url#tag"
                                                                    fieldLabel="Anchor Tag"
                                                                    name="./anchorTag"
                                                                    required="{Boolean}false"/>
                                                            </items>
                                                        </column>
                                                    </items>
                                                </field>
                                            </pages>
                                        </items>
                                    </column>
                                </items>
                            </fieldset>
                        </items>
                    </column>
                </items>
            </content>
        </items>
    </content>
</jcr:root>