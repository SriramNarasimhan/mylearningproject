<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Promotion List"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text &amp; Image - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <promos
                jcr:primaryType="nt:unstructured"
                jcr:title="Promos"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <image
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                class="promotionlist-image"
                                fieldDescription="The promo images displayed"
                                fieldLabel="Image"
                                name="./image"
                                required="{Boolean}true"
                                rootPath="/content/dam"/>
                            <alttext
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                class="promotionlist-alttext"
                                fieldDescription="Alt Text for Image"
                                fieldLabel="Alt Text"
                                maxlength="{Long}100"
                                name="./alttext"
                                required="{Boolean}true"/>
                            <heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                class="promotionlist-heading"
                                fieldDescription="Text heading"
                                fieldLabel="Heading"
                                name="./heading"
                                required="{Boolean}true"/>
                            <subheading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                customStart="{Boolean}true"
                                fieldDescription="Text sub-heading"
                                fieldLabel="Subheading"
                                name="./subheading"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Set the navigation title"
                                fieldLabel="Title"
                                name="./title"/>
                            <url
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                allowBlank="{Boolean}false"
                                fieldDescription="Sets the url target for the image and heading"
                                fieldLabel="Url"
                                name="./linkURL"
                                rootPath="/content"/>
                            <titletag
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Title Tag for the link"
                                fieldLabel="Title Tag"
                                maxlength="{Long}100"
                                name="./titletag"/>
                            <urlParams
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Sets the link parameters applied to the url. e.g. param1=value1&amp;param2=value2"
                                fieldLabel="Url Params"
                                name="./urlParams"/>
                            <target
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                fieldDescription="Sets the window target for the link"
                                fieldLabel="Target"
                                name="./target">
                                <items jcr:primaryType="nt:unstructured">
                                    <self
                                        jcr:primaryType="nt:unstructured"
                                        text="Default"
                                        value="_self"/>
                                    <blank
                                        jcr:primaryType="nt:unstructured"
                                        text="Blank"
                                        value="_blank"/>
                                </items>
                            </target>
                            <anchorTag
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Sets an anchor tag thatâ€™s applied to the link generated for the navigation item."
                                fieldLabel="Anchor Tag"
                                name="./anchorTag"/>
                        </items>
                    </column>
                </items>
            </promos>
        </items>
    </content>
</jcr:root>