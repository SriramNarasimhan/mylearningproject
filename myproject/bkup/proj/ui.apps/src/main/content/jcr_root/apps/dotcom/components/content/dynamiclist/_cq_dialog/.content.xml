<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Dynamic List"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text &amp; Image - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <settings
                jcr:primaryType="nt:unstructured"
                jcr:title="Settings"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Sets the title / heading displayed for the dynamic list."
                                fieldLabel="Heading"
                                name="./heading"/>
                            <page-size
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/foundation/form/numberfield"
                                fieldDescription="Set the default page size for the results"
                                fieldLabel="Page Size"
                                min="{Long}0"
                                name="./pagesize"/>
                            <sort-by
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/foundation/form/select"
                                fieldDescription="Sort By provides sorting behavior on the aggregated list of dynamic items in the final list of items. Sort by does not have any impact on the sorting of pinned items."
                                fieldLabel="Sort By"
                                name="./sortby">
                                <items jcr:primaryType="nt:unstructured">
                                    <option1
                                        jcr:primaryType="nt:unstructured"
                                        text="Recent"
                                        value="recent"/>
                                    <option2
                                        jcr:primaryType="nt:unstructured"
                                        text="Title (A-Z)"
                                        value="a-z"/>
                                    <option3
                                        jcr:primaryType="nt:unstructured"
                                        text="Title (Z-A)"
                                        value="z-a"/>
                                    <option4
                                        jcr:primaryType="nt:unstructured"
                                        text="Random"
                                        value="random"/>
                                </items>
                            </sort-by>
                            <style
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/foundation/form/select"
                                defaultValue="summarylist"
                                fieldDescription="Sets the style / rendered view."
                                fieldLabel="Style*"
                                name="./style"
                                required="{Boolean}true"
                                value="summarylist">
                                <items jcr:primaryType="nt:unstructured">
                                    <option2
                                        jcr:primaryType="nt:unstructured"
                                        text="Summary List"
                                        value="summarylist"/>
                                    <option1
                                        jcr:primaryType="nt:unstructured"
                                        text="Title List"
                                        value="titlelist"/>
                                    <option3
                                        jcr:primaryType="nt:unstructured"
                                        text="Thumbnail"
                                        value="thumbnail"/>
                                </items>
                            </style>
                            <cta
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Sets the CTA label in summary list view."
                                fieldLabel="CTA"
                                name="./cta"/>
                            <hide-tags/>
                            <hide-thumbnails/>
                        </items>
                    </column>
                </items>
            </settings>
            <rule
                jcr:primaryType="nt:unstructured"
                jcr:title="Rule"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <context-path
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                class="dynamic-list-context-path"
                                fieldDescription="Sets the  root context path for the content query"
                                fieldLabel="Context Path*"
                                name="./contextPath"
                                rootPath="/content"/>
                            <dynamic
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                    defaultChecked="{Boolean}false"
                                    fieldDescription="This field is used to render the dynamiclist component based on RC dynamic rules"
                                    name="./isdynamic"
                                    text="Dynamic List Enabled For RC Wrapper?"
                                    value="{Boolean}true"/>
                            <pages
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                class="full-width"
                                fieldDescription="Sets the tags for matching content in this specific rule set."
                                fieldLabel="Tags">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    acs-commons-nested="JSON_STORE"
                                    name="./uItems">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <tags
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/common/tagspicker"
                                                    fieldDescription="List of tags"
                                                    fieldLabel="Tags"
                                                    name="./tags"/>
                                                <logic
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    class="cq-dialog-dropdown-showhide"
                                                    cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                                    fieldDescription="Matching logic"
                                                    fieldLabel="Logic"
                                                    name="./logic">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <all
                                                            jcr:primaryType="nt:unstructured"
                                                            text="All"
                                                            value=" and"/>
                                                        <any
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Any"
                                                            value="or"/>
                                                    </items>
                                                </logic>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </pages>
                            <pool-tags
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                    defaultChecked="{Boolean}false"
                                    fieldDescription="If this field is enabled result will be mix and match of all the tags given above. Else, if the first tag given above has enough result matching with Result Limit field, results for rest of the tags authored will be ignored."
                                    name="./poolTags"
                                    text="Pool Multiple Tags?"
                                    value="{Boolean}true"/>
                            <result-limit
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/foundation/form/numberfield"
                                class="dynamic-list-result-limit"
                                fieldDescription="Sets the maximum number of results matched from this rule."
                                fieldLabel="Results Limit*"
                                min="{Long}0"
                                name="./resultLimit"/>
                            <additional-criteria-for-rule
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/foundation/form/select"
                                fieldDescription="Sets the sorting scheme to fetch the dynamic results."
                                fieldLabel="Additional Criteria for Rule"
                                name="./additionalCriteriaForRule">
                                <items jcr:primaryType="nt:unstructured">
                                    <option1
                                        jcr:primaryType="nt:unstructured"
                                        text="Select"
                                        value="select"/>
                                    <option2
                                        jcr:primaryType="nt:unstructured"
                                        text="Most Recently Published"
                                        value="most-recently-published"/>
                                    <option3
                                        jcr:primaryType="nt:unstructured"
                                        text="Random"
                                        value="random"/>
                                </items>
                            </additional-criteria-for-rule>
                        </items>
                    </column>
                </items>
            </rule>
            <item
                jcr:primaryType="nt:unstructured"
                jcr:title="Items"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <pages
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                class="full-width"
                                fieldDescription="Click 'Add Field' to add a new navigation link"
                                fieldLabel="Navigation Links">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    acs-commons-nested="JSON_STORE"
                                    name="./iItems">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <title
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    class="dynamic-list-title-field"
                                                    fieldDescription="Set the navigation title"
                                                    fieldLabel="Title"
                                                    name="./jcr:title"/>
                                                <description
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textarea"
                                                    class="dynamic-list-description-field"
                                                    fieldDescription="Set the description for the navigation item"
                                                    fieldLabel="Description"
                                                    name="./description"/>
                                                <url
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    allowBlank="{Boolean}false"
                                                    class="dynamic-list-url-field"
                                                    fieldDescription="Set the navigation url"
                                                    fieldLabel="Url*"
                                                    name="./linkURL"
                                                    rootPath="/content"/>
                                                <urlParams
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Sets the link parameters applied to the url."
                                                    fieldLabel="Url Params"
                                                    name="./urlParams"/>
                                                <target
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    class="cq-dialog-dropdown-showhide"
                                                    cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                                    fieldDescription="Sets the window target for the navigation url."
                                                    fieldLabel="Target"
                                                    name="./target">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <self
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Default"
                                                            value="_self"/>
                                                        <blank
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Blank"
                                                            value="_blank"/>
                                                        <smallmodal
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Small Modal"
                                                            value="_smallmodal"/>
                                                        <mediummodal
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Medium Modal"
                                                            value="_mediummodal"/>
                                                        <largemodal
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Large Modal"
                                                            value="_largemodal"/>
                                                    </items>
                                                </target>
                                                <anchorTag
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Sets an anchor tag thatâ€™s applied to the url."
                                                    fieldLabel="Anchor Tag"
                                                    name="./anchorTag"/>
                                                <title-tag
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    class="dynamic-list-title-tag"
                                                    fieldDescription="Set the title tag for the url"
                                                    fieldLabel="Title Tag"
                                                    maxLength="{Long}2"
                                                    name="./titleTag"/>
                                                <alt-text
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    class="dynamic-list-alt-text"
                                                    fieldDescription="Set the alt text for image"
                                                    fieldLabel="Alt Text*"
                                                    name="./altTag"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </pages>
                        </items>
                    </column>
                </items>
            </item>
        </items>
    </content>
</jcr:root>
