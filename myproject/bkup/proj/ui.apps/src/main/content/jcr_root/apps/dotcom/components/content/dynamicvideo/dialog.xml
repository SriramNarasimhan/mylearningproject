<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    deferredRender="false"
    title="DM Dynamic Video"
    xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tabpanel
            jcr:primaryType="cq:Widget"
            activeTab="{Long}0"
            xtype="tabpanel">
            <items jcr:primaryType="cq:WidgetCollection">
                <s7Image
                    jcr:primaryType="cq:Widget"
                    title="Dynamic Media Settings"
                    xtype="panel">
                    <listeners
                        jcr:primaryType="nt:unstructured"
                        activate="function(panel) {CQ.scene7.VideoHelper.init(panel);}"/>
                    <items jcr:primaryType="cq:WidgetCollection">
                        <viewerPresetsHbox
                            jcr:primaryType="cq:Widget"
                            border="false"
                            collapsed="false"
                            collapsible="true"
                            layout="form"
                            name="viewerPresetsHbox"
                            padding="10"
                            title="Viewer Presets"
                            titleCollapse="true"
                            xtype="panel"/>
                        <selectedViewerPreset
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Viewer Preset"
                            hidden="{Boolean}true"
                            name="./s7ViewerPreset"
                            xtype="textfield"/>
                        <width
                            jcr:primaryType="cq:Widget"
                            allowDecimals="false"
                            allowNegative="false"
                            fieldLabel="Width"
                            name="./width"
                            xtype="numberfield"/>
                        <height
                            jcr:primaryType="cq:Widget"
                            allowDecimals="false"
                            allowNegative="false"
                            fieldLabel="Height"
                            name="./height"
                            xtype="numberfield"/>
                        <videoserverurl
                            jcr:primaryType="cq:Widget"
                            fieldLabel=""
                            hidden="{Boolean}true"
                            name="./videoserverurl"
                            xtype="textfield"/>
                    </items>
                </s7Image>
            </items>
        </tabpanel>
    </items>
</jcr:root>
