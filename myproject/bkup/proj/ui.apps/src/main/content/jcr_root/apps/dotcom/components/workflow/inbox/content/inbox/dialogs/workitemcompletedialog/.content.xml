<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    granite:id="workitemCompletionDialog"
    jcr:primaryType="nt:unstructured"
    jcr:title="Complete Work Item"
    sling:resourceType="granite/ui/components/coral/foundation/dialog">
    <items jcr:primaryType="nt:unstructured">
        <form
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form"
            foundationForm="{Boolean}true"
            style="vertical">
            <items jcr:primaryType="nt:unstructured">
                <nextStep
                    granite:rel="workitem-dialog-select"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldLabel="Next Step"/>
                <custom
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="dotcom/components/workflow/inbox/gui/components/inbox/dialoginjection/placeholder"/>
                <comment
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                    fieldLabel="Comment"
                    name="comment"
                    rows="4"/>
            </items>
        </form>
    </items>
    <footer jcr:primaryType="nt:unstructured">
        <cancel
            granite:rel="workitem-complete-dialog-cancel"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/button"
            text="Cancel">
            <parentConfig
                jcr:primaryType="nt:unstructured"
                close="{Boolean}true"/>
        </cancel>
        <ok
            granite:rel="workitem-complete-dialog-submit"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/button"
            text="Ok"
            type="button"
            variant="primary">
            <parentConfig
                jcr:primaryType="nt:unstructured"
                close="{Boolean}false"/>
        </ok>
    </footer>
</jcr:root>
