<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Color Block"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#List - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <settings
                jcr:primaryType="nt:unstructured"
                jcr:title="Settings"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <listFrom
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                fieldLabel="Style for Color Block"
                                name="./styleFrom">
                                <items jcr:primaryType="nt:unstructured">
                                    <style
                                        jcr:primaryType="nt:unstructured"
                                        text="Select style"
                                        value="style"/>
                                    <button
                                        jcr:primaryType="nt:unstructured"
                                        text="Button CTA"
                                        value="button"/>
                                    <text
                                        jcr:primaryType="nt:unstructured"
                                        text="Link CTA"
                                        value="text"/>
                                </items>
                            </listFrom>
                            <setText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                showhidetargetvalue="text">
                                <items jcr:primaryType="nt:unstructured">
                                    <heading
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/heading"
                                        class="coral-Heading coral-Heading--4"
                                        level="{Long}4"
                                        text="Configure Link CTA Style Color Block"/>
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <layout
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/layouts/well"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <textTheme
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldDescription="Set the theme of the Color Block"
                                                fieldLabel="Color Block Background Color"
                                                name="./textTheme">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <blue
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Dark Blue"
                                                        value="suntrust-bgdarkBlue"/>
                                                    <orange
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Orange"
                                                        value="suntrust-bgorange"/>
                                                </items>
                                            </textTheme>
                                            <textHeading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldDescription="Enter the Color Block heading"
                                                fieldLabel="Color Block Heading"
                                                name="./textHeading"/>
                                            <textSub
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldDescription="Enter the Color Block supporting text"
                                                fieldLabel="Color Block Supporting Text"
                                                name="./textSub"/>
                                            <textTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldDescription="Set the button title"
                                                fieldLabel="CTA Title"
                                                maxlength="{Long}20"
                                                name="./textTitle"/>
                                            <textUrl
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                allowBlank="{Boolean}false"
                                                fieldDescription="Enter the link URL"
                                                fieldLabel="CTA URL"
                                                name="./textURL"
                                                rootPath="/content"/>
                                            <textUrlParams
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldDescription="URL Params provided should be concatenated onto the URL e.g. /path/to/url?param1=value1&amp;param2=value2"
                                                fieldLabel="CTA URL Parameters"
                                                name="./textParams"/>
                                            <textAnchorTag
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldDescription="Sets an anchor tag that’s applied to the URL e.g. /path/to/url#tag"
                                                fieldLabel="CTA Anchor Tag"
                                                name="./textAnchor"/>
                                            <textTarget
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldDescription="Sets the window target for the navigation"
                                                fieldLabel="CTA Target"
                                                name="./textTarget">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <self
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Self"
                                                        value="_self"/>
                                                    <blank
                                                        jcr:primaryType="nt:unstructured"
                                                        text="New Tab"
                                                        value="_blank"/>
                                                    <smallmodal
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Small Modal"
                                                        value="_smallmodal"/>
                                                    <mediummodal
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Medium Modal"
                                                        value="_mediummodal"/>
                                                    <largemodal
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Large Modal"
                                                        value="_largemodal"/>
                                                </items>
                                            </textTarget>
                                            <textTitleTag
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldDescription="Enter the CTA Title Tag"
                                                fieldLabel="CTA Title Tag"
                                                name="./textTitleTag"/>
                                        </items>
                                    </well>
                                </items>
                            </setText>
                            <setButton
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                showhidetargetvalue="button">
                                <items jcr:primaryType="nt:unstructured">
                                    <heading
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/heading"
                                        class="coral-Heading coral-Heading--4"
                                        level="{Long}4"
                                        text="Configure Button CTA Style Color Block"/>
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <layout
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/layouts/well"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <buttonTheme
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldDescription="Set the theme of the Color Block"
                                                fieldLabel="Color Block Background Color"
                                                name="./buttonTheme">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <blue
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Dark Blue"
                                                        value="suntrust-bgdarkBlue"/>
                                                    <orange
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Orange"
                                                        value="suntrust-bgorange"/>
                                                    <pink
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Pink"
                                                        value="suntrust-bgpink"/>
                                                    <lightblue
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Light Blue"
                                                        value="suntrust-bglightBlue"/>
                                                    <green
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Green"
                                                        value="suntrust-bggreen"/>
                                                </items>
                                            </buttonTheme>
                                            <buttonHeading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldDescription="Enter the Color Block heading"
                                                fieldLabel="Color Block Heading"
                                                name="./buttonHeading"/>
                                            <buttonSub
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldDescription="Enter the Color Block supporting text"
                                                fieldLabel="Color Block Supporting Text"
                                                name="./buttonSub"/>
                                            <buttonTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldDescription="Set the button title"
                                                fieldLabel="CTA Title"
                                                maxlength="{Long}20"
                                                name="./buttonTitle"/>
                                            <buttonUrl
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                allowBlank="{Boolean}false"
                                                fieldDescription="Enter the button URL"
                                                fieldLabel="CTA URL"
                                                name="./buttonURL"
                                                rootPath="/content"/>
                                            <buttonUrlParams
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldDescription="URL Params provided should be concatenated onto the URL e.g. /path/to/url?param1=value1&amp;param2=value2"
                                                fieldLabel="CTA URL Parameters"
                                                name="./buttonParams"/>
                                            <buttonAnchorTag
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldDescription="Sets an anchor tag that’s applied to the URL e.g. /path/to/url#tag"
                                                fieldLabel="CTA Anchor Tag"
                                                name="./buttonAnchor"/>
                                            <buttonTarget
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldDescription="Sets the window target for the navigation"
                                                fieldLabel="CTA Target"
                                                name="./buttonTarget">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <self
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Self"
                                                        value="_self"/>
                                                    <blank
                                                        jcr:primaryType="nt:unstructured"
                                                        text="New Tab"
                                                        value="_blank"/>
                                                    <smallmodal
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Small Modal"
                                                        value="_smallmodal"/>
                                                    <mediummodal
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Medium Modal"
                                                        value="_mediummodal"/>
                                                    <largemodal
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Large Modal"
                                                        value="_largemodal"/>
                                                </items>
                                            </buttonTarget>
                                            <buttonTitleTag
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldDescription="Enter the CTA Title Tag"
                                                fieldLabel="CTA Title Tag"
                                                name="./buttonTitleTag"/>
                                        </items>
                                    </well>
                                </items>
                            </setButton>
                        </items>
                    </column>
                </items>
            </settings>
        </items>
    </content>
</jcr:root>
