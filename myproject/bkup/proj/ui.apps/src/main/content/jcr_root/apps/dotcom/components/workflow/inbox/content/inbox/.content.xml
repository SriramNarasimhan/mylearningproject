<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        jcr:mixinTypes="[sling:VanityPath]"
        jcr:primaryType="nt:unstructured"
        jcr:title="Requester Inbox"
        sling:redirect="{Boolean}false"
        sling:resourceType="granite/ui/components/shell/collectionpage"
        sling:vanityOrder="{Long}301"
        sling:vanityPath="/aem/inbox/requester"
        consoleId="cq-workflow-inbox"
        contentPath="/etc/workflow/instances"
        currentView="${state[&quot;shell.collectionpage.layoutId&quot;].string}"
        modeGroup="cq-workflow-inbox-list"
        omnisearchLocationPath="/libs/granite/omnisearch/content/metadata/inbox"
        targetCollection=".cq-workflow-inbox-list">
        <head jcr:primaryType="nt:unstructured">
            <clientlibs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/includeclientlibs"
                categories="[coralui3,granite.ui.coral.foundation,cq.inbox.gui,cq.inbox.gui.extensions,aeon]"/>
        </head>
        <breadcrumbs
            jcr:primaryType="nt:unstructured"
            sling:resourceType="dotcom/components/workflow/inbox/gui/components/inbox/breadcrumbs"
            title="Inbox"/>
        <views jcr:primaryType="nt:unstructured">
            <list
                granite:rel="cq-workflow-inbox-list"
                jcr:primaryType="nt:unstructured"
                jcr:title="List View"
                sling:resourceType="granite/ui/components/coral/foundation/table"
                icon="viewList"
                layoutId="list"
                limit="{Long}40"
                metaResourceType="cq/gui/components/coral/admin/page/meta"
                modeGroup="cq-workflow-inbox-list"
                path="${empty requestPathInfo.suffix ? &quot;/&quot; : requestPathInfo.suffix}"
                selectionMode="row"
                size="${empty requestPathInfo.selectors[1] ? &quot;40&quot; : requestPathInfo.selectors[1]}"
                sortMode="remote"
                src="/mnt/overlay/dotcom/components/workflow/inbox/content/inbox/jcr:content/views/list{.offset,limit}.html${requestPathInfo.suffix}"
                stateId="shell.collectionpage">
                <columns jcr:primaryType="nt:unstructured">
                    <select
                        jcr:primaryType="nt:unstructured"
                        select="{Boolean}true"/>
                    <title
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Title"/>
                    <priority
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Priority"/>
                    <description
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Description"/>
                    <assignee
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Assignee"/>
                    <project
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Project"/>
                    <workflowInstance
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Workflow"/>
                    <status
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Status"/>
                    <startTime
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Start Date"/>
                    <dueDate
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Due Date"/>
                </columns>
                <datasource
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="dotcom/components/workflow/inbox/gui/components/inbox/datasource/itemsdatasource"
                    itemResourceType="dotcom/components/workflow/inbox/gui/components/inbox/inboxitem/list"
                    path="${requestPathInfo.suffix}"/>
            </list>
        </views>
        <actions jcr:primaryType="nt:unstructured">
            <selection jcr:primaryType="nt:unstructured">
                <details
                    granite:rel="cq-inbox-task-details"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                    action="cq.inbox.opendetails"
                    activeSelectionCount="single"
                    icon="edit"
                    text="Open"
                    title="Open"
                    variant="actionBar">
                    <data
                        jcr:primaryType="nt:unstructured"
                        href.uritemplate="/mnt/overlay/dotcom/components/workflow/inbox/content/inbox/details/task.html{?item}&amp;_charset_=utf-8"/>
                </details>
                <openPayload
                    granite:rel="cq-inbox-open-payload"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                    action="cq.inbox.openlink"
                    activeSelectionCount="single"
                    icon="viewOn"
                    text="View Payload"
                    title="View Payload"
                    variant="actionBar">
                    <data
                        jcr:primaryType="nt:unstructured"
                        linkAttributeName="payloadLink"
                        target="_blank"/>
                </openPayload>
            </selection>
        </actions>
    </jcr:content>
    <images/>
    <details/>
    <dialogs/>
</jcr:root>
