<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Slide-Question/Info"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text &amp; Image - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <maintab
                jcr:primaryType="nt:unstructured"
                jcr:title="Main tab"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter the slide title here."
                                fieldLabel="Slide Title"
                                name="./slidetitle"/>
                            <titlesize
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                fieldDescription="Sets the Size of Title"
                                fieldLabel="Title Size"
                                name="./titlewidth">
                                <items jcr:primaryType="nt:unstructured">
                                    <default
                                        jcr:primaryType="nt:unstructured"
                                        text="Default - 30px"
                                        value="suntrust-carousel-slide-title"/>
                                    <small
                                        jcr:primaryType="nt:unstructured"
                                        text="Small - 28px"
                                        value="suntrust-carousel-slide-title-28"/>
                                    <large
                                        jcr:primaryType="nt:unstructured"
                                        text="Large - 32px"
                                        value="suntrust-carousel-slide-title-32"/>
                                </items>
                            </titlesize>
                            <heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                fieldDescription="Enter the slide title here."
                                fieldLabel="Slide Heading"
                                name="./slideheading"
                                required="{Boolean}true"/>
                            <headingwidth
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                fieldDescription="Sets the width of the Heading"
                                fieldLabel="Heading Width"
                                name="./headingwidth">
                                <items jcr:primaryType="nt:unstructured">
                                    <default
                                        jcr:primaryType="nt:unstructured"
                                        text="Default-700px"
                                        value=""/>
                                    <_x0038_00px
                                        jcr:primaryType="nt:unstructured"
                                        text="800px"
                                        value="heading-width-800"/>
                                    <_x0039_00px
                                        jcr:primaryType="nt:unstructured"
                                        text="900px"
                                        value="heading-width-900"/>
                                    <_x0031_000px
                                        jcr:primaryType="nt:unstructured"
                                        text="1000px"
                                        value="heading-width-1000"/>
                                    <_x0031_100px
                                        jcr:primaryType="nt:unstructured"
                                        text="1100px"
                                        value="heading-width-1100"/>
                                    <_x0031_200px
                                        jcr:primaryType="nt:unstructured"
                                        text="1200px"
                                        value="heading-width-1200"/>
                                </items>
                            </headingwidth>
                            <textbody
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                fieldDescription="Enter Text Content Here"
                                fieldLabel="Text Content"
                                name="./slidebody"
                                useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceSuperType="/apps/dotcom/components/content/globalrte/cq:dialog/content/items/column/items/text/rtePlugins"/>
                                <uiSettings
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceSuperType="/apps/dotcom/components/content/globalrte/cq:dialog/content/items/column/items/text/uiSettings"/>
                                <htmlRules
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceSuperType="/apps/dotcom/components/content/globalrte/cq:dialog/content/items/column/items/text/htmlRules"/>
                            </textbody>
                            <textalignment
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                fieldDescription="Sets the alignment for text content"
                                fieldLabel="Text Alignment"
                                name="./textalignment">
                                <items jcr:primaryType="nt:unstructured">
                                    <right
                                        jcr:primaryType="nt:unstructured"
                                        text="Right"
                                        value="text-align-right"/>
                                    <left
                                        jcr:primaryType="nt:unstructured"
                                        text="Left"
                                        value="text-align-left"/>
                                    <center
                                        jcr:primaryType="nt:unstructured"
                                        text="Center"
                                        value="text-align-center"/>
                                </items>
                            </textalignment>
                            <theme
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                fieldDescription="Sets the font theme "
                                fieldLabel="Font Theme"
                                name="./fontTheme">
                                <items jcr:primaryType="nt:unstructured">
                                    <white
                                        jcr:primaryType="nt:unstructured"
                                        text="White"
                                        value="white"/>
                                    <dark
                                        jcr:primaryType="nt:unstructured"
                                        text="Dark"
                                        value="dark"/>
                                </items>
                            </theme>
                            <glymphimage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                allowBlank="{Boolean}false"
                                fieldDescription="Select the Glymph Image path"
                                fieldLabel="Glymph Image"
                                name="./glymphimg"
                                rootPath="/content"/>
                            <glymphalignment
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                fieldDescription="Sets the alignment for glymph image"
                                fieldLabel="Glymph Image Alignment"
                                name="./glymphalignment">
                                <items jcr:primaryType="nt:unstructured">
                                    <right
                                        jcr:primaryType="nt:unstructured"
                                        text="Right"
                                        value="image-right"/>
                                    <left
                                        jcr:primaryType="nt:unstructured"
                                        text="Left"
                                        value="image-left"/>
                                </items>
                            </glymphalignment>
                            <glymphalttext
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter Alt text for Glymph Image"
                                fieldLabel="Glymph Image Alt Text"
                                name="./glymphalttext"/>
                            <normalimage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                allowBlank="{Boolean}false"
                                fieldDescription="Sets the url target for normal background image for slide"
                                fieldLabel="Normal BG Image"
                                name="./normalslidebgimg"
                                rootPath="/content"/>
                            <retinaimage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                allowBlank="{Boolean}false"
                                fieldDescription="Sets the url target for retina background image for slide"
                                fieldLabel="Retina BG Image"
                                name="./retinaslidebgimg"
                                rootPath="/content"/>
                            <mobileimage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                allowBlank="{Boolean}false"
                                fieldDescription="Sets the url target for mobile adaptive image for slide"
                                fieldLabel="Mobile Image"
                                name="./mobileimg"
                                rootPath="/content"/>
                            <isendslide
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                defaultChecked="{Boolean}false"
                                fieldDescription="Check this box if the slide is an end slide"
                                fieldLabel="Is the slide an end slide?"
                                name="./isendslide"
                                text="Is End Slide?"
                                uncheckedValue="false"
                                value="true"/>
                        </items>
                    </column>
                </items>
            </maintab>
            <cta
                jcr:primaryType="nt:unstructured"
                jcr:title="CTA"
                sling:resourceType="granite/ui/components/foundation/section"
                id="id-freeformmode-tab-hide">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <cta
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                fieldDescription="Click 'Add field' to add a new CTA"
                                fieldLabel="CTA">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    acs-commons-nested="JSON_STORE"
                                    name="./ctaItems">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <text
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textarea"
                                                    fieldDescription="Enter the CTA Text Here"
                                                    fieldLabel="CTA Text"
                                                    name="./ctatext"/>
                                                <icon
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    allowBlank="{Boolean}false"
                                                    fieldDescription="Browse and enter CTA Icon path"
                                                    fieldLabel="CTA Icon"
                                                    name="./ctaicon"
                                                    rootPath="/content"/>
                                                <url
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    allowBlank="{Boolean}false"
                                                    fieldDescription="Browse and enter CTA URL"
                                                    fieldLabel="CTA URL"
                                                    name="./ctaurl"
                                                    rootPath="/content"/>
                                                <urlparam
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Enter the CTA URL Param here"
                                                    fieldLabel="CTA URL Param"
                                                    name="./ctaurlparam"/>
                                                <tag
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Enter the CTA Anchor Tag here"
                                                    fieldLabel="CTA Anchor Tag"
                                                    name="./ctatag"/>
                                                <target
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    class="cq-dialog-dropdown-showhide"
                                                    cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                                    fieldDescription="Sets the window target for the link"
                                                    fieldLabel="CTA Target"
                                                    name="./ctatarget">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <self
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Self"
                                                            value="_self"/>
                                                        <blank
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Blank"
                                                            value="_blank"/>
                                                    </items>
                                                </target>
                                                <helptext
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Enter help text for CTA"
                                                    fieldLabel="CTA Help Text"
                                                    name="./ctahelptext"/>
                                                <helptextposition
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    class="cq-dialog-dropdown-showhide"
                                                    cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                                    fieldDescription="Sets the position of the help text"
                                                    fieldLabel="Help Text Position"
                                                    name="./helptextposition">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <right
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Right"
                                                            value="sun-decisiontree-cta-help-text-right"/>
                                                        <left
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Left"
                                                            value="sun-decisiontree-cta-help-text-left"/>
                                                        <below
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Below"
                                                            value="sun-decisiontree-cta-help-text-below"/>
                                                    </items>
                                                </helptextposition>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </cta>
                        </items>
                    </column>
                </items>
            </cta>
            <optoutcta
                jcr:primaryType="nt:unstructured"
                jcr:title="Opt Out CTA"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <showoptoutcta
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                defaultChecked="{Boolean}false"
                                fieldDescription="Checking this box shows Opt Out Text"
                                fieldLabel="Show Opt Out text?"
                                name="./showOptOutCta"
                                text="Show Opt Out CTA"
                                uncheckedValue="false"
                                value="true"/>
                            <optouttext
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter the Opt Out Text Here"
                                fieldLabel="Opt Out Text"
                                name="./optouttext"/>
                            <theme
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                fieldDescription="Sets the font theme "
                                fieldLabel="Font Theme"
                                name="./optOutFontTheme">
                                <items jcr:primaryType="nt:unstructured">
                                    <white
                                        jcr:primaryType="nt:unstructured"
                                        text="White"
                                        value="white"/>
                                    <dark
                                        jcr:primaryType="nt:unstructured"
                                        text="Dark"
                                        value="dark"/>
                                </items>
                            </theme>
                            <optouturl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                allowBlank="{Boolean}false"
                                fieldDescription="Browse and enter Opt Out URL"
                                fieldLabel="Opt Out URL"
                                name="./optOutUrl"
                                rootPath="/content"/>
                            <urlparam
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter the CTA URL Param here"
                                fieldLabel="CTA URL Param"
                                name="./optouturlparam"/>
                            <tag
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter the CTA Anchor Tag here"
                                fieldLabel="CTA Anchor Tag"
                                name="./optouttag"/>
                            <target
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                fieldDescription="Sets the window target for the link"
                                fieldLabel="CTA Target"
                                name="./optouttarget">
                                <items jcr:primaryType="nt:unstructured">
                                    <self
                                        jcr:primaryType="nt:unstructured"
                                        text="Self"
                                        value="_self"/>
                                    <blank
                                        jcr:primaryType="nt:unstructured"
                                        text="Blank"
                                        value="_blank"/>
                                </items>
                            </target>
                        </items>
                    </column>
                </items>
            </optoutcta>
        </items>
    </content>
</jcr:root>
