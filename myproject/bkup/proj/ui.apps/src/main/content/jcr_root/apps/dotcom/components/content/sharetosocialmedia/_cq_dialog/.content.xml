<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Share Page To Social Media"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="en/cq/current/wcm/default_components.html#Text">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                	<alignment
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/select"
                        defaultValue="right"
                        fieldDescription="Select Alignment"
                        fieldLabel="Set Alignment"
                        name="./align"
                        value="right">
                        <items jcr:primaryType="nt:unstructured">
                            <right
                                jcr:primaryType="nt:unstructured"
                                text="Right"
                                value="right"/>
                            <left
                                jcr:primaryType="nt:unstructured"
                                text="Left"
                                value="left"/>
                        </items>
                    </alignment>
                    <facebook
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                        defaultChecked="{Boolean}false"
                        text="Check To Display Facebook Share Icon"
                        name="./facebookCheckbox"
                        uncheckedValue="false"
                        value="true"/>
                    <!-- facebooklike
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                        defaultChecked="{Boolean}false"
                        text="Check To Display Facebook Like Share Icon"
                        name="./facebooklikeCheckbox"
                        uncheckedValue="false"
                        value="true"/-->
					<linkdin
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                        defaultChecked="{Boolean}false"
                        text="Check To Display Linkdin Share Icon"
                        name="./linkdinCheckbox"
                        uncheckedValue="false"
                        value="true"/>
					<twitter
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                        defaultChecked="{Boolean}false"
                        text="Check To Display Twitter Share Icon"
                        name="./twitterCheckbox"
                        uncheckedValue="false"
                        value="true"/>
					<pinterest
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                        defaultChecked="{Boolean}false"
                        text="Check To Display Pinterest Share Icon"
                        name="./pinterestCheckbox"
                        uncheckedValue="false"
                        value="true"/>
					<google
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                        defaultChecked="{Boolean}false"
                        text="Check To Display Google Plus One Share Icon"
                        name="./googleCheckbox"
                        uncheckedValue="false"
                        value="true"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
