<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Project Info"
    sling:resourceType="dotcom/components/workflow/inbox/gui/components/inbox/itemdetails/tabs/dataprovider/project"
    class="content-container taskdetails-tab task-tab"
    tabid="f84cc8d6-60ab-474e-bdf8-a0b7a434f289">
    <items jcr:primaryType="nt:unstructured">
        <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="dotcom/components/workflow/inbox/gui/components/inbox/itemdetails"
            foundation-form-output-replace=".foundation-content"
            foundation-mode-group="cq-inbox-updatedetails"
            id="projectinfoform"
            model-form-ajax="{Boolean}true"
            model-submit-function="updateDetails"
            redirect="{Boolean}true">
            <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
            <items jcr:primaryType="nt:unstructured">
                <column1
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                        <cover
                            granite:rel="cq-projects-wizard-fileupload"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="dotcom/components/workflow/inbox/gui/components/inbox/itemdetails/tabs/infothumbnail"
                            name="coverImage"/>
                    </items>
                </column1>
                <column2
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                        <name
                            granite:rel="cq-inbox-info--read-only"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Title"
                            name="projectTitle"/>
                        <description
                            granite:rel="cq-inbox-info--read-only"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="dotcom/components/workflow/inbox/gui/components/inbox/itemdetails/tabs/renderIfNonEmpty"
                            fieldLabel="Description"
                            includeResourceType="granite/ui/components/coral/foundation/form/textarea"
                            name="jcr:description"
                            rows="4"/>
                        <active
                            granite:rel="cq-inbox-info--read-only"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Project Status"
                            name="projectStatus"/>
                        <duedate
                            granite:rel="inbox-duedate cq-inbox-info--read-only"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="dotcom/components/workflow/inbox/gui/components/inbox/itemdetails/tabs/renderIfNonEmpty"
                            displayedFormat="YYYY-MM-DD HH:mm"
                            fieldLabel="Due Date"
                            includeResourceType="granite/ui/components/coral/foundation/form/datepicker"
                            minDate="today"
                            name="project.dueDate"
                            required="{Boolean}false"
                            type="datetime"/>
                    </items>
                </column2>
            </items>
        </content>
    </items>
    <rendercondition
        jcr:primaryType="nt:unstructured"
        sling:resourceType="dotcom/components/workflow/inbox/gui/components/inbox/itemdetails/tabs/rendercondition/hasprojectinfo"/>
</jcr:root>
