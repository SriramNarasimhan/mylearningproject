<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Optional Legal Reviewer Selection"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="en/cq/current/wcm/default_components.html#Title"
    touchUiDialogPath="/apps/dotcom/components/workflow/legalcomplianceselectionv2/cq:dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <columns
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <primarylegalreviewerlabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/formbuilder/sectionfield"
                        fieldLabel="Assign Primary Legal Reviewer"
                        metaType="section"/>
                    <hintmessage01
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/field"
                        fieldLabel="Leave field blank to skip Legal Review and advance workflow to Final Deployment Check"
                        metaType="section"
                        renderReadOnly="{Boolean}true"/>
                    <hintmessage02
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/field"
                        fieldLabel="Enter your name to advance workflow so you can select Legal Reviewers"
                        metaType="section"
                        renderReadOnly="{Boolean}true"/>
                    <hintmessage03
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/field"
                        fieldLabel="Enter the name of another user to have that person select Legal Reviewers"
                        metaType="section"
                        renderReadOnly="{Boolean}true"/>
                    <legalreviewer
                        granite:id="legal-reviewer-userpicker"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/apps/dotcom/components/workflow/userpicker/authorizable/autocomplete"
                        emptyText="Select Primary Legal Reviewer"
                        fieldDescription="Type or press down arrow to select the Primary Legal Reviewer"
                        fieldLabel=""
                        forceSelection="true"
                        id="legal-reviewer-userpicker"
                        name="./jcr:content/compliancereviewer2"
                        selector="user"
                        type="string"
                        userGroup="dotcom-legal-reviewer"
                        valueType="id"/>
                </items>
            </columns>
        </items>
    </content>
</jcr:root>
