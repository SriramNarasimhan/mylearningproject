<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Hero"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text &amp; Image - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <content
                jcr:primaryType="nt:unstructured"
                jcr:title="Content"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heroposition
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                defaultValue="left"
                                fieldDescription="Sets the position for Hero "
                                fieldLabel="Hero Positioning"
                                name="./alignment">
                                <items jcr:primaryType="nt:unstructured">
                                    <left
                                        jcr:primaryType="nt:unstructured"
                                        text="Left"
                                        value="suntrust-floatLeft "/>
                                    <center
                                        jcr:primaryType="nt:unstructured"
                                        text="Center"
                                        value="suntrust-floatCenter "/>
                                    <right
                                        jcr:primaryType="nt:unstructured"
                                        text="Right"
                                        value="suntrust-floatRight"/>
                                </items>
                            </heroposition>
                            <herotextalignment
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                defaultValue="left"
                                fieldDescription="Sets the alignment for Hero"
                                fieldLabel="Hero Text Alignment"
                                name="./heroposition">
                                <items jcr:primaryType="nt:unstructured">
                                    <left
                                        jcr:primaryType="nt:unstructured"
                                        text="Left"
                                        value="suntrust-textLeft"/>
                                    <center
                                        jcr:primaryType="nt:unstructured"
                                        text="Center"
                                        value="suntrust-textCenter"/>
                                    <right
                                        jcr:primaryType="nt:unstructured"
                                        text="Right"
                                        value="suntrust-textRight"/>
                                </items>
                            </herotextalignment>
                            <herotitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Sets the title for the hero in desktop."
                                fieldLabel="Title"
                                name="./headlineHero"
                                useFixedInlineToolbar="{Boolean}true"/>
                            <intro
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="This is a short description or introductory text."
                                fieldLabel="Intro"
                                name="./intro"
                                useFixedInlineToolbar="{Boolean}true"/>
                            <hideintro
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                defaultChecked="{Boolean}true"
                                fieldDescription="Checking this box hides the Intro on ‘Small / Phone’ breakpoints only."
                                fieldLabel="Hide Intro?"
                                name="./hideintro"
                                text="Hide Intro?"
                                uncheckedValue="false"
                                value="true"/>
                            <invocaFlagCheckbox
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                fieldDescription="Select checkbox if the configured CTA Button needs to be displayed after sometime."
                                name="./invocaFlagCheckbox"
                                text="Enable Invoca Opacity"
                                value="true"/>
                            <invocaFlagCheckboxType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./invocaFlagCheckbox@TypeHint"
                                value="Boolean"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Sets the title displayed in the button"
                                fieldLabel="CTA"
                                maxlength="{Long}20"
                                name="./ctatitle"/>
                            <url
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                allowBlank="{Boolean}false"
                                fieldDescription="Sets the url target for the button "
                                fieldLabel="URL"
                                name="./linkURL"
                                rootPath="/content"/>
                            <titletag
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Title Tag for the link"
                                fieldLabel="URL Title"
                                maxlength="{Long}100"
                                name="./titletag"
                                validation="hero-link-title"/>
                            <urlParams
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Sets the link parameters applied to the url. e.g. param1=value1&amp;param2=value2"
                                fieldLabel="URL Params"
                                name="./urlParams"/>
                            <target
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                fieldDescription="Sets the window target for the link"
                                fieldLabel="Target"
                                name="./target">
                                <items jcr:primaryType="nt:unstructured">
                                    <self
                                        jcr:primaryType="nt:unstructured"
                                        text="Default"
                                        value="_self"/>
                                    <blank
                                        jcr:primaryType="nt:unstructured"
                                        text="Blank"
                                        value="_blank"/>
                                </items>
                            </target>
                            <anchorTag
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Sets an anchor tag that’s applied to the link generated for the navigation item."
                                fieldLabel="Anchor Tag"
                                name="./anchorTag"/>
                            <ctatheme
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                fieldDescription="Sets the theme applied to the link."
                                fieldLabel="CTA Theme"
                                name="./ctatheme">
                                <items jcr:primaryType="nt:unstructured">
                                    <blue
                                        jcr:primaryType="nt:unstructured"
                                        text="Blue"
                                        value="suntrust-promo-cta-button-blue"/>
                                    <orange
                                        jcr:primaryType="nt:unstructured"
                                        text="Orange"
                                        value="suntrust-promo-cta-button"/>
                                    <white
                                        jcr:primaryType="nt:unstructured"
                                        text="White"
                                        value="suntrust-promo-cta-button-white"/>
                                </items>
                            </ctatheme>
                            <theme
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                fieldDescription="Sets the content theme to match the background image"
                                fieldLabel="Theme"
                                name="./theme">
                                <items jcr:primaryType="nt:unstructured">
                                    <dark
                                        jcr:primaryType="nt:unstructured"
                                        text="Dark (Default)"
                                        value="darkthemeCTA"/>
                                    <light
                                        jcr:primaryType="nt:unstructured"
                                        text="Light"
                                        value="whitethemeCTA"/>
                                </items>
                            </theme>
                        </items>
                    </column>
                </items>
            </content>
            <image
                jcr:primaryType="nt:unstructured"
                jcr:title="Image"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <file
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="Sets the feature image displayed"
                                fieldLabel="Feature Image"
                                fileNameParameter="./fileName"
                                fileReferenceParameter="./fileReference"
                                id="file-upload-hero"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                name="./file"
                                title="Upload Image Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"
                                validation="imagefile"/>
                            <alttext
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Alt Text for Feature Image"
                                fieldLabel="Alt Text"
                                maxlength="{Long}100"
                                name="./featureimagealttext"
                                validation="image-alt"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Title for Feature Image"
                                fieldLabel="Feature Image Title"
                                maxlength="{Long}125"
                                name="./featureimagetitle"
                                validation="image-title"/>
                        </items>
                    </column>
                </items>
            </image>
            <bgimage
                jcr:primaryType="nt:unstructured"
                jcr:title="Background Image"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <file
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="Sets the background image for the Hero"
                                fieldLabel="Background Image"
                                fileNameParameter="./bgfileName"
                                fileReferenceParameter="./bgfileReference"
                                id="file-upload-hero-bg"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                name="./bgfile"
                                title="Upload Image Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <alttext
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Alt Text for Background Image"
                                fieldLabel="Alt Text"
                                maxlength="{Long}100"
                                name="./bgimagealttext"
                                validation="bg-image-alt"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Title for Background Image"
                                fieldLabel="Background Image Title"
                                maxlength="{Long}125"
                                name="./bgimagetitle"
                                validation="bg-image-title"/>
                        </items>
                    </column>
                </items>
            </bgimage>
            <positioning
                jcr:primaryType="nt:unstructured"
                jcr:title="Positioning"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <position
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                fieldDescription="Sets the position of the primary content box."
                                fieldLabel="Position"
                                name="./position">
                                <items jcr:primaryType="nt:unstructured">
                                    <left
                                        jcr:primaryType="nt:unstructured"
                                        text="Left"
                                        value="left"/>
                                    <right
                                        jcr:primaryType="nt:unstructured"
                                        text="Right"
                                        value="right"/>
                                </items>
                            </position>
                            <padding
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/foundation/form/numberfield"
                                fieldDescription="Sets padding overrides for the primary content box"
                                fieldLabel="Padding"
                                min="{Long}0"
                                name="./padding"/>
                        </items>
                    </column>
                </items>
            </positioning>
            <herosignon
                jcr:primaryType="nt:unstructured"
                jcr:title="Hero Sign On"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heromobile
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                defaultChecked="{Boolean}false"
                                fieldDescription="Sets whether to display the sign on module in mobile"
                                fieldLabel="Hero Mobile"
                                name="./heromobile"
                                text="Display the Sign On Module in Mobile?"
                                uncheckedValue="false"
                                value="true"/>
                            <signon
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                defaultChecked="{Boolean}false"
                                fieldDescription="Sets whether to display the sign on module."
                                fieldLabel="Display Sign On module?"
                                name="./signon"
                                text="Display Sign On module?"
                                uncheckedValue="false"
                                value="true"/>
                            <signonpage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="This field is used to configure Sign On Page Path"
                                fieldLabel="Sign On Page"
                                name="./signonpage"
                                rootPath="/content"/>
                        </items>
                    </column>
                </items>
            </herosignon>
        </items>
    </content>
</jcr:root>
