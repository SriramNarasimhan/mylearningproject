<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Image Text"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text &amp; Image - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <imagetab
                jcr:primaryType="nt:unstructured"
                jcr:title="Image"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <style
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="Select display style"
                                fieldLabel="Select Style"
                                name="./style">
                                <items jcr:primaryType="nt:unstructured">
                                    <imagetext
                                        jcr:primaryType="nt:unstructured"
                                        text="Image Text"
                                        value="imagetext"/>
                                    <textimage
                                        jcr:primaryType="nt:unstructured"
                                        text="Text Image"
                                        value="textimage"/>
                                    <imageonly
                                        jcr:primaryType="nt:unstructured"
                                        text="Image Only"
                                        value="imageonly"/>
                                    <textonly
                                        jcr:primaryType="nt:unstructured"
                                        text="Text Only"
                                        value="textonly"/>
                                </items>
                            </style>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter title to be displayed"
                                fieldLabel="Title"
                                name="./title"/>
                            <file
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="Drop image to be displayed"
                                fieldLabel="Image"
                                fileNameParameter="./fileName"
                                fileReferenceParameter="./image"
                                id="file-upload-image-text"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                name="./file"
                                title="Upload Image Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <alttext
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Alt text for image"
                                fieldLabel="Alt Text"
                                maxlength="{Long}100"
                                name="./alttext"
                                validation="image-text-alt"/>
                            <imagetitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Title for Image"
                                fieldLabel="Image Title"
                                maxlength="{Long}125"
                                name="./imagetitle"
                                validation="image-text-title"/>
                            <url
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="Set the navigation url"
                                fieldLabel="URL"
                                name="./linkURL"
                                rootPath="/content"/>
                            <titletag
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Title Tag for the link"
                                fieldLabel="URL Title"
                                maxlength="{Long}100"
                                name="./titletag"
                                validation="imagetext-link-title"/>
                            <urlParams
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="URL Params provided should be concatenated onto the url e.g. /path/to/url?param1=value1&amp;param2=value2"
                                fieldLabel="URL Params"
                                name="./urlParams"/>
                            <target
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="Sets the window target for the link"
                                fieldLabel="Target"
                                name="./target">
                                <items jcr:primaryType="nt:unstructured">
                                    <self
                                        jcr:primaryType="nt:unstructured"
                                        text="Same Window"
                                        value="_self"/>
                                    <blank
                                        jcr:primaryType="nt:unstructured"
                                        text="New Window"
                                        value="_blank"/>
                                    <smallmodal
                                        jcr:primaryType="nt:unstructured"
                                        text="Small Modal"
                                        value="_smallmodal"/>
                                    <mediummodal
                                        jcr:primaryType="nt:unstructured"
                                        text="Medium Modal"
                                        value="_mediummodal"/>
                                    <largemodal
                                        jcr:primaryType="nt:unstructured"
                                        text="Large Modal"
                                        value="_largemodal"/>
                                </items>
                            </target>
                            <anchorTag
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Sets an anchor tag thatâ€™s applied to the url e.g. /path/to/url#tag"
                                fieldLabel="Anchor Tag"
                                name="./anchorTag"/>
                        </items>
                    </column>
                </items>
            </imagetab>
            <texttab
                jcr:primaryType="nt:unstructured"
                jcr:title="Text"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <textcontent
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                fieldDescription="Enter Text Content Here"
                                fieldLabel="Text Content"
                                name="./textcontent"
                                useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceSuperType="/apps/dotcom/components/content/globalrte/cq:dialog/content/items/column/items/text/rtePlugins"/>
                                <uiSettings
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceSuperType="/apps/dotcom/components/content/globalrte/cq:dialog/content/items/column/items/text/uiSettings"/>
                                <htmlRules
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceSuperType="/apps/dotcom/components/content/globalrte/cq:dialog/content/items/column/items/text/htmlRules"/>
                            </textcontent>
                        </items>
                    </column>
                </items>
            </texttab>
        </items>
    </content>
</jcr:root>
