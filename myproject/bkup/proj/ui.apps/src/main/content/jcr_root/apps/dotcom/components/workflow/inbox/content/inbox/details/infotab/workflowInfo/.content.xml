<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Workflow Info"
    sling:resourceType="dotcom/components/workflow/inbox/gui/components/inbox/itemdetails/tabs/dataprovider/workflow"
    class="content-container taskdetails-tab task-tab"
    tabid="f84cc8d6-60ab-474e-bdf8-a0b7a434f289">
    <items jcr:primaryType="nt:unstructured">
        <wrapper
            granite:rel="workflow-details-wrapper"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <workflowProgress
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Workflow Progress"
                    sling:resourceType="dotcom/components/workflow/inbox/gui/components/inbox/itemdetails/workflowprogress"/>
                <content
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="dotcom/components/workflow/inbox/gui/components/inbox/itemdetails"
                    foundation-form-output-replace=".foundation-content"
                    foundation-mode-group="cq-inbox-updatedetails"
                    id="workflowinfoform"
                    model-form-ajax="{Boolean}true"
                    model-submit-function="updateDetails"
                    redirect="{Boolean}true">
                    <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                    <items jcr:primaryType="nt:unstructured">
                        <column1
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                            <items jcr:primaryType="nt:unstructured">
                                <thumbnail
                                    granite:rel="cq-projects-wizard-fileupload"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="dotcom/components/workflow/inbox/gui/components/inbox/itemdetails/tabs/workflowthumb"/>
                            </items>
                        </column1>
                        <column2
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                            <items jcr:primaryType="nt:unstructured">
                                <title
                                    granite:rel="cq-inbox-info--read-only"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Workflow Title"
                                    name="workflowTitle"/>
                                <payload
                                    granite:rel="cq-inbox-info--read-only"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="dotcom/components/workflow/inbox/gui/components/inbox/itemdetails/tabs/renderIfNonEmpty"
                                    fieldLabel="payload"
                                    includeResourceType="granite/ui/components/coral/foundation/form/textfield"
                                    name="workflowPayload"/>
                                <workflowId
                                    granite:rel="cq-inbox-info--read-only"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Workflow ID"
                                    name="workflowId"/>
                                <modelTitle
                                    granite:rel="cq-inbox-info--read-only"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Model Title"
                                    name="modelTitle"/>
                                <modelVersion
                                    granite:rel="cq-inbox-info--read-only"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Model Version"
                                    name="modelVersion"/>
                                <modelDescription
                                    granite:rel="cq-inbox-info--read-only"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="dotcom/components/workflow/inbox/gui/components/inbox/itemdetails/tabs/renderIfNonEmpty"
                                    fieldLabel="Model Description"
                                    includeResourceType="granite/ui/components/coral/foundation/form/textarea"
                                    name="modelDescription"
                                    rows="4"/>
                                <modelInitiator
                                    granite:rel="cq-inbox-info--read-only"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Initiator"
                                    name="initiator"/>
                            </items>
                        </column2>
                    </items>
                </content>
            </items>
        </wrapper>
    </items>
    <rendercondition
        jcr:primaryType="nt:unstructured"
        sling:resourceType="dotcom/components/workflow/inbox/gui/components/inbox/itemdetails/tabs/rendercondition/hasworkflowinfo"/>
</jcr:root>
