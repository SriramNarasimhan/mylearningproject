<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Tab Container"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text &amp; Image - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tabconfig
                jcr:primaryType="nt:unstructured"
                jcr:title="Tab Style Details"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <tabstyle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="Select the Tab Style from the dropdown"
                                fieldLabel="Tab Style"
                                name="./tabstyle">
                                <items jcr:primaryType="nt:unstructured">
                                    <classic
                                        jcr:primaryType="nt:unstructured"
                                        text="Classic"
                                        value="Classic Tab"/>
                                    <alternate
                                        jcr:primaryType="nt:unstructured"
                                        text="Alternate"
                                        value="Alternate Tab"/>
                                </items>
                            </tabstyle>
                        </items>
                    </column>
                </items>
            </tabconfig>
            <contentTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Tab Content"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <fieldset
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                <layout
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <column
					jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container"
					class="tabcomp-container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <tabs
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                                class="tab-class"
                                                fieldDescription="Click 'Add field' to add a new tab"
                                                fieldLabel="Tabs">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                                    acs-commons-nested="JSON_STORE"
                                                    name="./iItems">
                                                    <layout
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                        method="absolute"/>
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <tabid
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="/libs/granite/ui/components/foundation/form/numberfield"
                                                                    defaultValue="{Long}1"
                                                                    fieldDescription="The unique consistent ID of Tab. Do not change the value once after assignment"
                                                                    fieldLabel="Tab ID"
                                                                    min="{Long}1"
                                                                    name="./tabid"
                                                                    step="{Long}1"/>
                                                                <tabname
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                    emptyText="Enter a heading *Required  | *Max Characters : 65"
                                                                    fieldDescription="The heading of the Tab Section"
                                                                    fieldLabel="Heading"
                                                                    maxlength="{Long}65"
                                                                    name="./tabname"
                                                                    required="{Boolean}true"/>
                                                                <anchorname
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                    emptyText="Enter a name for the anchor link"
                                                                    fieldDescription="This is the name used to generate an anchor / jump link"
                                                                    fieldLabel="Anchor Name"
                                                                    name="./anchorname"/>
                                                            </items>
                                                        </column>
                                                    </items>
                                                </field>
                                            </tabs>
                                        </items>
                                    </column>
                                </items>
                            </fieldset>
                        </items>
                    </column>
                </items>
            </contentTab>
        </items>
    </content>
</jcr:root>
