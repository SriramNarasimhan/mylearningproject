<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Payments Table"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text &amp; Image - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <content
                jcr:primaryType="nt:unstructured"
                jcr:title="Content"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container"
                        id="faqpaths">
                        <items jcr:primaryType="nt:unstructured">
                            <producttype
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="select which product to use in the table"
                                fieldLabel="Product Type"
                                name="./producttype">
                                <items jcr:primaryType="nt:unstructured">
                                    <customchoiceloan
                                        jcr:primaryType="nt:unstructured"
                                        text="Custom Choice Loan"
                                        value="SUNTFAO1"/>
                                    <graduatebusinessloan
                                        jcr:primaryType="nt:unstructured"
                                        text="Graduate Business Loan"
                                        value="STGBL1"/>
                                    <unionfederalprivatestudentloan
                                        jcr:primaryType="nt:unstructured"
                                        text="Union Federal Private Student Loan"
                                        value="STUFPSL1"/>
                                </items>
                            </producttype>
                            <tabledescription
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                fieldDescription="Enter description above the table"
                                fieldLabel="Table Description"
                                name="./tabledescription"
                                useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceSuperType="/apps/dotcom/components/content/globalrte/cq:dialog/content/items/column/items/text/rtePlugins"/>
                                <uiSettings
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceSuperType="/apps/dotcom/components/content/globalrte/cq:dialog/content/items/column/items/text/uiSettings"/>
                                <htmlRules
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceSuperType="/apps/dotcom/components/content/globalrte/cq:dialog/content/items/column/items/text/htmlRules"/>
                            </tabledescription>
                            <ratetype
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter text for Rate Type dropdown"
                                fieldLabel="Rate Type"
                                name="./ratetype"/>
                            <term
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter text for Term dropdown"
                                fieldLabel="Term"
                                name="./term"/>
                            <repaymentoption
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter text for Repayment Option dropdown"
                                fieldLabel="Repayment Option"
                                name="./repaymentoption"/>
                            <column2heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter text for Lowest Rate Heading Label"
                                fieldLabel="Lowest Rate Heading Label"
                                name="./column2heading"/>
                            <column3heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter text for Highest Rate Heading Label"
                                fieldLabel="Highest Rate Heading Label"
                                name="./column3heading"/>
                            <row1label
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter text for Loan Amount Label"
                                fieldLabel="Loan Amount Label"
                                name="./row1label"/>
                            <row2label
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter text for Current Interest Rate Label"
                                fieldLabel="Current Interest Rate Label"
                                name="./row2label"/>
                            <row3label
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter text for APR Label"
                                fieldLabel="APR  Label"
                                name="./row3label"/>
                            <row4label
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter text for Monthly Payment (while In school) Label"
                                fieldLabel="Monthly Payment (while In school) Label"
                                name="./row4label"/>
                            <row5label
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter text for Monthly Payment (during payment) Label"
                                fieldLabel="Monthly Payment (during payment) Label"
                                name="./row5label"/>
                            <row6label
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter text for Deferment Period (months) Label"
                                fieldLabel="Deferment Period (months) Label"
                                name="./row6label"/>
                            <row7label
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter text for Repayment Period (months) Label"
                                fieldLabel="Repayment Period (months) Label"
                                name="./row7label"/>
                            <row8label
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter text for Total Repayment Amount Label"
                                fieldLabel="Total Repayment Amount Label"
                                name="./row8label"/>
                            <disclaimer
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                fieldDescription="Enter disclaimer for the table"
                                fieldLabel="Table Disclaimer"
                                name="./disclaimer"
                                useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceSuperType="/apps/dotcom/components/content/globalrte/cq:dialog/content/items/column/items/text/rtePlugins"/>
                                <uiSettings
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceSuperType="/apps/dotcom/components/content/globalrte/cq:dialog/content/items/column/items/text/uiSettings"/>
                                <htmlRules
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceSuperType="/apps/dotcom/components/content/globalrte/cq:dialog/content/items/column/items/text/htmlRules"/>
                            </disclaimer>
                        </items>
                    </column>
                </items>
            </content>
        </items>
    </content>
</jcr:root>
