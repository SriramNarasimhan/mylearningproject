<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Product Section"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text &amp; Image - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <content
                jcr:primaryType="nt:unstructured"
                jcr:title="Content"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Heading"
                                fieldLabel="Heading"
                                name="./heading"/>
                            <invocaFlagCheckbox
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                fieldDescription="Select checkbox if the configured CTA Button or Text needs to be displayed after sometime."
                                name="./invocaFlagCheckbox"
                                text="Enable Invoca Opacity"
                                value="true"/>
                            <productitem
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                class="full-width"
                                fieldDescription="Product Item"
                                fieldLabel="Product Item">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    acs-commons-nested="JSON_STORE"
                                    name="./productitems">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <specialcallout
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Special Call-out"
                                                    fieldLabel="Special Call-out"
                                                    name="./splcallout"/>
                                                <bordercolor
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    class="cq-dialog-dropdown-showhide"
                                                    cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                                    fieldDescription="Sets the section Background Color"
                                                    fieldLabel="Border Color"
                                                    name="./bodercolor">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <none
                                                            jcr:primaryType="nt:unstructured"
                                                            text="None"
                                                            value="none"/>
                                                        <blue
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Blue"
                                                            value="blue"/>
                                                    </items>
                                                </bordercolor>
                                                <productlinktext
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Product/Category Link Text"
                                                    fieldLabel="Product/Category Link Text"
                                                    name="./productlinktext"/>
                                                <productdescription
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                    fieldDescription="Product Description"
                                                    fieldLabel="Product Description"
                                                    name="./productdescription"
                                                    useFixedInlineToolbar="{Boolean}true">
                                                    <rtePlugins
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceSuperType="/apps/dotcom/components/content/globalrte/cq:dialog/content/items/column/items/text/rtePlugins"/>
                                                    <uiSettings
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceSuperType="/apps/dotcom/components/content/globalrte/cq:dialog/content/items/column/items/text/uiSettings"/>
                                                    <htmlRules
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceSuperType="/apps/dotcom/components/content/globalrte/cq:dialog/content/items/column/items/text/htmlRules"/>
                                                </productdescription>
                                                <additionalproductlinktext
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Additional Product Link Text"
                                                    fieldLabel="Additional Product Link Text"
                                                    name="./additionalproductlinktext"/>
                                                <producturl
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    fieldDescription="Select Path to Product URL"
                                                    fieldLabel="Product URL"
                                                    name="./producturl"
                                                    rootPath="/content"/>
                                                <urlParams
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Url Params provided should be concatenated onto the url e.g. /path/to/url?param1=value1&amp;param2=value2"
                                                    fieldLabel="URL Parameters"
                                                    name="./producturlParams"/>
                                                <anchorTag
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Sets an anchor tag that’s applied to the url e.g. /path/to/url#tag"
                                                    fieldLabel="Anchor Tag"
                                                    name="./productanchorTag"/>
                                                <target
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    class="cq-dialog-dropdown-showhide"
                                                    cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                                    fieldDescription="Sets the window for target navigation"
                                                    fieldLabel="Target"
                                                    name="./producttarget">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <self
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Default"
                                                            value="_self"/>
                                                        <blank
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Blank"
                                                            value="_blank"/>
                                                    </items>
                                                </target>
                                                <titletag
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Enter the title tag on hover (max 100 chars)"
                                                    fieldLabel="Title Tag"
                                                    maxlength="{Long}100"
                                                    name="./producttitletag"/>
                                                <ctatext
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Sets the Text for CTA"
                                                    fieldLabel="CTA Text"
                                                    name="./ctatext"/>
                                                <ctaurl
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    fieldDescription="Select Path to Link URL"
                                                    fieldLabel="CTA URL"
                                                    name="./ctalinkurl"
                                                    rootPath="/content"/>
                                                <ctaurlParams
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Url Params provided should be concatenated onto the url e.g. /path/to/url?param1=value1&amp;param2=value2"
                                                    fieldLabel="CTA URL Parameters"
                                                    name="./ctaurlParams"/>
                                                <ctaanchorTag
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Sets an anchor tag that’s applied to the url e.g. /path/to/url#tag"
                                                    fieldLabel="Anchor Tag"
                                                    name="./ctaanchorTag"/>
                                                <ctatarget
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    class="cq-dialog-dropdown-showhide"
                                                    cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                                    fieldDescription="Sets the window for target navigation"
                                                    fieldLabel="Target"
                                                    name="./ctatarget">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <self
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Default"
                                                            value="_self"/>
                                                        <blank
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Blank"
                                                            value="_blank"/>
                                                    </items>
                                                </ctatarget>
                                                <ctatitletag
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Enter the title tag on hover (max 100 chars)"
                                                    fieldLabel="Title Tag"
                                                    maxlength="{Long}100"
                                                    name="./ctatitletag"/>
                                                <ctatheme
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    class="cq-dialog-dropdown-showhide"
                                                    cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                                    fieldDescription="Sets the color of the button"
                                                    fieldLabel="CTA Theme"
                                                    name="./ctatheme">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <orange
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Orange"
                                                            value="suntrust-promo-cta-button"/>
                                                        <blue
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Blue"
                                                            value="suntrust-promo-cta-button-blue"/>
                                                        <white
                                                            jcr:primaryType="nt:unstructured"
                                                            text="White"
                                                            value="suntrust-promo-cta-button-white"/>
                                                    </items>
                                                </ctatheme>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </productitem>
                        </items>
                    </column>
                </items>
            </content>
        </items>
    </content>
</jcr:root>
