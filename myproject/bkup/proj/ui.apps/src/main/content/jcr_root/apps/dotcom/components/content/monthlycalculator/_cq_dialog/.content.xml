<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Monthly Budgeting Calculator"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text &amp; Image - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <monthlyexpense
                jcr:primaryType="nt:unstructured"
                jcr:title="Monthly Expenses"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <monthlyexpenseheader
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                fieldDescription="Set the Monthly Expense Header"
                                fieldLabel="Monthly Expense Header"
                                name="./monthlyexpenseheader"/>
                            <monthlyexpensefields
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                class="full-width"
                                fieldDescription="Click 'Add Field' to add a new fee structure"
                                fieldLabel="Monthly Expense Fields">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    acs-commons-nested="JSON_STORE"
                                    name="./monthlyexpenses">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <fields
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textarea"
                                                    fieldDescription="Enter field value"
                                                    fieldLabel="Field n"
                                                    name="./monthlyexpensefield"
                                                    required="{Boolean}true"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </monthlyexpensefields>
                            <monthlyexpensetotal
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                fieldDescription="Set the Monthly Expenses SubTotal Amount"
                                fieldLabel="Monthly Expenses SubTotal"
                                name="./monthlyexpensetotal"/>
                        </items>
                    </column>
                </items>
            </monthlyexpense>
            <monthlyincome
                jcr:primaryType="nt:unstructured"
                jcr:title="Monthly Income"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <monthlyincomeheader
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                fieldDescription="Set the Monthly Income Header"
                                fieldLabel="Monthly Income Header"
                                name="./monthlyincomeheader"/>
                            <monthlyincomefields
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                class="full-width"
                                fieldDescription="Click 'Add Field' to add a new fee structure"
                                fieldLabel="Monthly Income Fields">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    acs-commons-nested="JSON_STORE"
                                    name="./monthlyincome">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <fields
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textarea"
                                                    fieldDescription="Enter field value"
                                                    fieldLabel="Field n"
                                                    name="./monthlyincomefield"
                                                    required="{Boolean}true"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </monthlyincomefields>
                            <monthlyincometotal
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                fieldDescription="Set the Monthly Income SubTotal amount"
                                fieldLabel="Monthly Income SubTotal"
                                name="./monthlyincometotal"/>
                        </items>
                    </column>
                </items>
            </monthlyincome>
            <netmonthlyincome
                jcr:primaryType="nt:unstructured"
                jcr:title="Net Monthly Income"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <netmonthlyheader
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                fieldDescription="Set the Net Monthly Income Header"
                                fieldLabel="Net Monthly Income Header"
                                name="./netmonthlyheader"/>
                            <netmonthlyincome
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                fieldDescription="Set the Monthly Income Subtotal amount"
                                fieldLabel="Monthly Income Subtotal"
                                name="./netmonthlyincome"/>
                            <netmonthlyexpense
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                fieldDescription="Set the Monthly Expenses Subtotal amount"
                                fieldLabel="Monthly Expenses Subtotal"
                                name="./netmonthlyexpense"/>
                            <netamount
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                fieldDescription="Set the Net Monthly Income amount"
                                fieldLabel="Net Monthly Income"
                                name="./netamount"/>
                        </items>
                    </column>
                </items>
            </netmonthlyincome>
        </items>
    </content>
</jcr:root>
