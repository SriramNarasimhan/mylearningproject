<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Audio Podcast Component dialog"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text &amp; Image - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <configs
                jcr:primaryType="nt:unstructured"
                jcr:title="Audio Podcast Configuration"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <audiofile
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="Sets the audio to displayed"
                                fieldLabel="Audio File"
                                fileNameParameter="./fileName"
                                fileReferenceParameter="./fileReference"
                                mimeTypes="[audio,video]"
                                multiple="{Boolean}false"
                                name="./file"
                                title="Upload Audio Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <readTranscriptButtonLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Set Label for Read Transcription Button Here"
                                fieldLabel="ShowTranscript - ButtonLabel"
                                name="./readTranscriptButtonLabel"/>
                            <hideTranscriptButtonLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Set Label for Hide Transcription Button Here"
                                fieldLabel="HideTranscript - ButtonLabel"
                                name="./hideTranscriptButtonLabel"/>
                            <hidetitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                defaultChecked="{Boolean}true"
                                fieldDescription="Sets whether to display the title in the audio podcast component"
                                fieldLabel="Hide Title"
                                name="./hidetitle"
                                text="Hide Title?"
                                uncheckedValue="false"
                                value="true"/>
                            <hidedesc
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                defaultChecked="{Boolean}true"
                                fieldDescription="Sets whether to display the description in the audio podcast component"
                                fieldLabel="Hide Description"
                                name="./descriptioncheckbox"
                                text="Hide Description?"
                                uncheckedValue="false"
                                value="true"/>
                            <hidedisc
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                defaultChecked="{Boolean}true"
                                fieldDescription="Sets whether to display the disclaimer in the audio podcast component"
                                fieldLabel="Hide Disclaimer"
                                name="./disclaimercheckbox"
                                text="Hide Disclaimer?"
                                uncheckedValue="false"
                                value="true"/>
                            <showimage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                defaultChecked="{Boolean}false"
                                fieldDescription="Sets whether to Show Image in the audio podcast component"
                                fieldLabel="Show Image"
                                name="./showimage"
                                text="Show Image?"
                                uncheckedValue="false"
                                value="true"/>
                        </items>
                    </column>
                </items>
            </configs>
        </items>
    </content>
</jcr:root>
