<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="CTA Component Dialog."
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#List - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <settings
                jcr:primaryType="nt:unstructured"
                jcr:title="Settings"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <listFrom
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"
                                fieldLabel="Style for CTA"
                                name="./styleFrom">
                                <items jcr:primaryType="nt:unstructured">
                                    <style
                                        jcr:primaryType="nt:unstructured"
                                        text="Select style"
                                        value="style"/>
                                    <button
                                        jcr:primaryType="nt:unstructured"
                                        text="Button"
                                        value="button"/>
                                    <text
                                        jcr:primaryType="nt:unstructured"
                                        text="Text"
                                        value="text"/>
                                </items>
                            </listFrom>
                            <applypadding
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                fieldDescription="Check the box to apply padding."
                                name="./applypadding"
                                text="Apply Padding"
                                value="true"/>
                            <invocaFlagCheckbox
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                fieldDescription="Select checkbox if the configured CTA Button or Text needs to be displayed after sometime."
                                name="./invocaFlagCheckbox"
                                text="Enable Invoca Opacity"
                                value="true"/>
                            <invocaFlagCheckboxType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./invocaFlagCheckbox@TypeHint"
                                value="Boolean"/>
                            <setText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                showhidetargetvalue="text">
                                <items jcr:primaryType="nt:unstructured">
                                    <heading
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/heading"
                                        class="coral-Heading coral-Heading--4"
                                        level="{Long}4"
                                        text="Configure Text Style CTA"/>
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <layout
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/layouts/well"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <pages
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                                class="foundation-layout-util-maximized-alt">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                                    acs-commons-nested="JSON_STORE"
                                                    name="./iItems">
                                                    <layout
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                        method="absolute"/>
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <loDataPersistCheckbox
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                                    fieldDescription="Pull Loan officer data from cookies if exist"
                                                                    name="./loDataPersistCheckbox"
                                                                    text="Enable Loan Officer Persistence?"
                                                                    value="true"/>
                                                                <loDataPersistCheckboxType
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                                    name="./loDataPersistCheckbox@TypeHint"
                                                                    value="Boolean"/>
                                                                <title
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                    fieldDescription="Set the cta title"
                                                                    fieldLabel="Title"
                                                                    name="./jcr:title"/>
                                                                <url
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                                    allowBlank="{Boolean}false"
                                                                    class="cta-url-multifield"
                                                                    fieldDescription="Set the navigation url"
                                                                    fieldLabel="Url"
                                                                    name="./linkURL"
                                                                    rootPath="/content"/>
                                                                <urlParams
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                    fieldDescription="Url Params provided should be concatenated onto the url e.g. /path/to/url?param1=value1&amp;param2=value2"
                                                                    fieldLabel="Url Params"
                                                                    name="./urlParams"/>
                                                                <anchortitle
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                    class="cta-anchor-title-multifield"
                                                                    fieldDescription="Set the title for text style CTA"
                                                                    fieldLabel="Title for text style CTA"
                                                                    maxlength="{Long}125"
                                                                    name="./anchortitle"/>
                                                                <target
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                                    fieldDescription="Sets the window target for the navigation"
                                                                    fieldLabel="Target"
                                                                    name="./target">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <self
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Default"
                                                                            value="_self"/>
                                                                        <blank
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Blank"
                                                                            value="_blank"/>
                                                                        <smallmodal
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Small Modal"
                                                                            value="_smallmodal"/>
                                                                        <mediummodal
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Medium Modal"
                                                                            value="_mediummodal"/>
                                                                        <largemodal
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Large Modal"
                                                                            value="_largemodal"/>
                                                                    </items>
                                                                </target>
                                                                <anchorTag
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                    fieldDescription="Sets an anchor tag that’s applied to the url e.g. /path/to/url#tag"
                                                                    fieldLabel="Anchor Tag"
                                                                    name="./anchorTag"/>
                                                                <allignment
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                                    fieldDescription="Set the allignment of the text"
                                                                    fieldLabel="Link Allignment"
                                                                    name="./allignment">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <left
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Left"
                                                                            value="CTAs_anchorTxt_alignLeft"/>
                                                                        <center
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Center"
                                                                            value="CTAs_anchorTxt_alignCenter"/>
                                                                        <right
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Right"
                                                                            value="CTAs_anchorTxt_alignRight"/>
                                                                    </items>
                                                                </allignment>
                                                            </items>
                                                        </column>
                                                    </items>
                                                </field>
                                            </pages>
                                        </items>
                                    </well>
                                </items>
                            </setText>
                            <setButton
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                showhidetargetvalue="button">
                                <items jcr:primaryType="nt:unstructured">
                                    <heading
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/heading"
                                        class="coral-Heading coral-Heading--4"
                                        level="{Long}4"
                                        text="Configure Button Style CTA"/>
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <layout
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/layouts/well"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <loDataPersistCheckbox
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                fieldDescription="Pull Loan officer data from cookies if exist"
                                                name="./loDataPersistCheckbox"
                                                text="Enable Loan Officer Persistence?"
                                                value="true"/>
                                            <loDataPersistCheckboxType
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                name="./loDataPersistCheckbox@TypeHint"
                                                value="Boolean"/>
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldDescription="Set the cta title"
                                                fieldLabel="Title"
                                                name="./jcr:title"/>
                                            <url
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                allowBlank="{Boolean}false"
                                                class="cta-url-simplefield"
                                                fieldDescription="Set the navigation url"
                                                fieldLabel="Url"
                                                name="./linkURL"
                                                rootPath="/content"/>
                                            <urlParams
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldDescription="Url Params provided should be concatenated onto the url e.g. /path/to/url?param1=value1&amp;param2=value2"
                                                fieldLabel="Url Params"
                                                name="./urlParams"/>
                                            <anchortitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                class="cta-anchor-title-simplefield"
                                                fieldDescription="Set the title for button style CTA"
                                                fieldLabel="Title for button style CTA"
                                                maxlength="{Long}125"
                                                name="./anchortitle"/>
                                            <target
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldDescription="Sets the window target for the navigation"
                                                fieldLabel="Target"
                                                name="./target">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <self
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Default"
                                                        value="_self"/>
                                                    <blank
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Blank"
                                                        value="_blank"/>
                                                    <smallmodal
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Small Modal"
                                                        value="_smallmodal"/>
                                                    <mediummodal
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Medium Modal"
                                                        value="_mediummodal"/>
                                                    <largemodal
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Large Modal"
                                                        value="_largemodal"/>
                                                </items>
                                            </target>
                                            <anchorTag
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldDescription="Sets an anchor tag that’s applied to the url e.g. /path/to/url#tag"
                                                fieldLabel="Anchor Tag"
                                                name="./anchorTag"/>
                                            <theme
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldDescription="Set the theme of the CTA button"
                                                fieldLabel="Theme"
                                                name="./theme">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <blue
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Blue"
                                                        value="suntrust-secondary-button_CTAs"/>
                                                    <orange
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Orange"
                                                        value="suntrust-primary-button_CTAs"/>
                                                    <white
                                                        jcr:primaryType="nt:unstructured"
                                                        text="White"
                                                        value="suntrust-tertiary-button_CTAs"/>
                                                </items>
                                            </theme>
                                            <allignment
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldDescription="Set the allignment of the CTA button"
                                                fieldLabel="Button Allignment"
                                                name="./allignment">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <left
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Left"
                                                        value="cta_alignLeft"/>
                                                    <center
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Center"
                                                        value="cta_alignCenter"/>
                                                    <right
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Right"
                                                        value="cta_alignRight"/>
                                                </items>
                                            </allignment>
                                            <size
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldDescription="Set the size of the CTA button"
                                                fieldLabel="Size"
                                                name="./size">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <small
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Small"
                                                        value="suntrust-Small_standaloneCTA_btns"/>
                                                    <medium
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Medium"
                                                        value=""/>
                                                    <large
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Large"
                                                        value="suntrust-Large_standaloneCTA_btns"/>
                                                </items>
                                            </size>
                                        </items>
                                    </well>
                                </items>
                            </setButton>
                        </items>
                    </column>
                </items>
            </settings>
        </items>
    </content>
</jcr:root>
